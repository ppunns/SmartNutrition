<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background color -->
        <item name="windowSplashScreenBackground">#FFFF</item>

        <!-- Use the app icon as the splash screen icon -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>

        <!-- Set the splash screen animation duration -->
        <item name="windowSplashScreenAnimationDuration">300</item>

        <!-- Set the theme that will be used after the splash screen -->
        <item name="postSplashScreenTheme">@style/Theme.SmartNutrition</item>
    </style>
</resources>